.view-cart { background-color: #f6f6f6; }

.view-cart icon.arrow { position: absolute; right : 20rpx; line-height: 0; top : 50%; margin-top: -14rpx; }
.view-cart icon.arrow:after { content: " ";display: inline-block; transform: rotate(45deg); height: 20rpx; width: 20rpx; border-width: 4rpx 4rpx 0 0; border-color: #c8cccd; border-style: solid; position: relative; top: 0; right: 0; }

.view-cart .address { color : #404040; padding : 20rpx 50rpx 20rpx 20rpx; position: relative; background: url(http://static.dmall.com/kayak-project/cart/dist/cart/common/image/shoppingline.png) repeat-x 0 0 #fff; background-size: auto 4rpx; }
.view-cart .address .user { font-size : 32rpx; display: block; }
.view-cart .address .location { margin-top: 10rpx; font-size : 24rpx; display: block; color : gray; }

.view-cart .list { padding-bottom: 80rpx; }
.view-cart .list .shop { margin: 20rpx 0; background-color: #fff; border : solid 1px #eee; border-width : 1px 0; }
.view-cart .shop .title { border-bottom : solid 1px #eee; position: relative; position: relative; padding-left : 80rpx; height : 70rpx; line-height: 70rpx; font-size: 28rpx; color : gray; }
.view-cart .shop .title .checkbox { position: absolute; left : 10rpx; top : 50%; margin-top: -30rpx; } 
.view-cart .shop .title image { width : 50rpx; height : 50rpx; display: inline-block; float : left; border : solid 1px #eee; margin-top : 9rpx; margin-right : 10rpx; }

.view-cart .shop .items { overflow: hidden; }
.view-cart .shop .item { padding-left : 80rpx; position: relative; top : -1px; }
.view-cart .shop .item .checkbox { position: absolute; left : 10rpx; top : 50%; margin-top : -30rpx; }
.view-cart .shop .item .cont { font-size : 28rpx; border-top : solid 1px #eee; padding : 20rpx 240rpx 20rpx 0; color : #404040; }
.view-cart .shop .item .cont .price { font-weight : bold; margin-top : 10rpx; }
.view-cart .shop .item .cont .act { display: flex; height : 60rpx; position: absolute; right : 20rpx; top : 50%; margin-top : -30rpx; }
.view-cart .shop .item .cont .act view { width : 60rpx; text-align: center; line-height: 60rpx; }

.view-cart .shop .total { position: relative; padding : 20rpx; padding-right : 200rpx; background-color: #fff; border-top : solid 1px #eee; }
.view-cart .shop .total .price { font-size : 32rpx; color : #f5692e; }
.view-cart .shop .total .info { font-size : 24rpx; color : gray; margin-top : 10rpx; }
.view-cart .shop .total .buy { position: absolute; right : 20rpx; top : 50%; margin-top : -35rpx; background-color: #ff712b; height : 70rpx; line-height: 70rpx; border-radius : 8rpx; color : #fff; font-size : 28rpx; padding : 0 40rpx; display: inline-block; }


